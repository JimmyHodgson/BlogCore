{
  "name": "blogcore",
  "author": {
    "name": "Jimmy Hodgson",
    "email": "Jimmy.hodgson@outlook.com"
  },
  "description": "Web based CV written in c# and vuejs",
  "scripts": {
    "build": "npm run clean && npm run sass && npm run postcss && npm run cssmin && npm run concat && npm run uglify && npm run optimize-images && npm run copy && npm run bundle",
    "bundle": "npm run bundle-date-fns && npm run bundle-popperjs",
    "bundle-date-fns": "esbuild node_modules/date-fns/index.mjs --bundle --minify --format=esm --outfile=assets/dist/lib/date-fns/date-fns.min.js",
    "bundle-popperjs": "esbuild node_modules/@popperjs/core/dist/esm/index.js --bundle --minify --format=esm --outfile=assets/dist/lib/popperjs/popperjs.min.js",
    "clean": "rimraf assets/dist",
    "cssmin": "postcss assets/dist/css/main.css --use cssnano --no-map -o assets/dist/css/main.min.css",
    "concat": "node scripts/concat.js",
    "copy": "npm run copy-apexcharts && npm run copy-bootstrap && npm run copy-jquery && npm run copy-vue && npm run copy-vue3-apexcharts && npm run copy-vue3-toastify && npm run copy-vue-datepicker && npm run copy-fontawesome-fonts && npm run copy-fonts",
    "copy-apexcharts": "copyfiles -f node_modules/apexcharts/dist/* assets/dist/lib/apexcharts/",
    "copy-bootstrap": "copyfiles -f node_modules/bootstrap/dist/js/* assets/dist/lib/bootstrap/",
    "copy-fontawesome-fonts": "copyfiles -f node_modules/@fortawesome/fontawesome-pro/webfonts/* assets/dist/fonts/fontawesome/",
    "copy-fonts": "copyfiles -f assets/src/fonts/* assets/dist/fonts/",
    "copy-jquery": "copyfiles -f node_modules/jquery/dist/* assets/dist/lib/jquery/",
    "copy-vue": "copyfiles -f node_modules/vue/dist/* assets/dist/lib/vue/",
    "copy-vue-datepicker": "copyfiles -f node_modules/@vuepic/vue-datepicker/dist/* assets/dist/lib/vue-datepicker/",
    "copy-vue3-toastify": "copyfiles -f node_modules/vue3-toastify/dist/* assets/dist/lib/vue3-toastify/",
    "copy-vue3-apexcharts": "copyfiles -f node_modules/vue3-apexcharts/dist/* assets/dist/lib/vue3-apexcharts/",
    "optimize-images": "node scripts/optimize-images.js",
    "postcss": "postcss assets/dist/css/*.css --use autoprefixer --no-map --dir assets/dist/css",
    "sass": "sass --no-source-map assets/src/sass:assets/dist/css",
    "uglify": "npm run uglify-common && npm run uglify-components && npm run uglify-project",
    "uglify-common": "terser assets/src/js/common.js -o assets/dist/js/common.min.js --compress passes=3 --mangle",
    "uglify-components": "terser assets/dist/js/components.combined.js -o assets/dist/js/components.min.js --compress passes=3 --mangle properties",
    "uglify-project": "terser assets/dist/js/project.combined.js -o assets/dist/js/project.min.js --compress passes=3 --mangle properties",
    "watch": "npm-watch",
    "watch-styles": "npm run sass && npm run postcss && npm run cssmin",
    "watch-javascript": "npm run concat && npm run uglify",
    "watch-images": "npm run optimize-images"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "copyfiles": "^2.4.1",
    "esbuild": "0.24.0",
    "sass": "1.77.6",
    "postcss-cli": "^11.0.0",
    "rimraf": "^6.0.1",
    "npm-watch": "^0.13.0",
    "sharp-cli": "5.1.0",
    "terser": "5.34.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-pro": "^6.6.0",
    "@popperjs/core": "^2.11.8",
    "@vuepic/vue-datepicker": "^9.0.3",
    "apexcharts": "^3.54.0",
    "bootstrap": "^5.3.3",
    "date-fns": "^3.6.0",
    "jquery": "^3.7.1",
    "vue": "^3.5.10",
    "vue3-apexcharts": "^1.6.0",
    "vue3-toastify": "0.2.3"
  },
  "browserslist": [
    "defaults"
  ],
  "watch": {
    "watch-styles": {
      "patterns": [ "assets/src/sass/**/*.{scss,sass}" ],
      "extensions": "scss,sass",
      "runOnChangeOnly": true,
      "delay": 1000
    },
    "watch-javascript": {
      "patterns": [ "assets/src/js/**/*.js" ],
      "extensions": "js",
      "runOnChangeOnly": true,
      "delay": 1000
    },
    "watch-images": {
      "patterns": [ "assets/src/images/**/*" ],
      "extensions": "png,jpg,jpeg",
      "runOnChangeOnly": true,
      "delay": 1000
    }
  }
}

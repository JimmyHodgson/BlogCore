@model EducationModel

@{
    Layout = "_ManagementLayout";
    ViewData["Controller"] = "Education";
    ViewData["Action"] = "Details";
    ViewData["Title"] = $"{ViewData["Controller"]} - {ViewData["Action"]}";
    ViewData["Icon"] = "fas fa-university fa-fw";
}

<section id="education-details" class="form-component">
    <div class="header">
        <h2><i class="fas fa-university fa-fw"></i> Details</h2>
    </div>
    <div class="body">
        <div class="mb-3">
            <div class="detail-image">
                <img src="@Html.DisplayFor(model => model.ImageUrl)" />
            </div>
        </div>
        <div class="mb-3">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.School)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.School)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Link)
                </dt>
                <dd>
                    <span class="blogcore-link">
                        <a href="@Html.DisplayFor(model => model.Link)" class="link">@Html.DisplayFor(model => model.Link)</a>
                        <span class="underline"></span>
                    </span>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ImageUrl)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Year)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Year)
                </dd>
            </dl>
            <div>
                <a asp-action="Index"><i class="fal fa-arrow-left fa-fw"></i> Back to List</a> |
                <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fal fa-edit fa-fw"></i> Edit</a>
            </div>
        </div>
    </div>
</section>


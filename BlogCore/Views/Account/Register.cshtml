@model RegisterViewModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Register";
}
<script>
    @*console.log(@Html.ValidationMessage());*@
</script>
<section class="content-container -center">
    @if (Model.RegisterEnabled) {
        <div class="register-form">
            <div class="header">
                <h2>Register</h2>
            </div>
            <div class="body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control form-input" maxlength="15" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control form-input" maxlength="15" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control form-input" maxlength="25" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control form-input" maxlength="25" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control form-input" maxlength="25" required />
                    </div>
                    
                    <div class="mb-3 text-danger">
                        @Html.ValidationSummary()
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary" title="Register">Register</button>
                    </div>
                </form>
            </div>
        </div>
    } else
    {
        <div class="error-panel">
            <i class="fas fa-fw fa-exclamation-triangle"></i> Registration is disabled.
        </div>
    }
</section>


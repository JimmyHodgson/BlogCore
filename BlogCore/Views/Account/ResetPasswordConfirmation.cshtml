@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "PasswordResetConfirmation";
}

<section class="confirmation-panel">
    <div class="header">
        <i class="fal fa-check-circle fa-3x icon" aria-hidden="true"></i>
    </div>
    <div class="body">
        <h2>Password Reset Confirmation</h2>

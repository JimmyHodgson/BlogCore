@model BlogCore.Models.Catalogues.MediaGroupModel

@{
    Layout = "_ManagementLayout";
    ViewData["Controller"] = "Media";
    ViewData["Child"] = "Group";
    ViewData["Action"] = "Delete";
    ViewData["Title"] = $"{ViewData["Child"]} - {ViewData["Action"]}";
}
<section id="mediagroup-delete-form" class="form-component">
    <div class="header">
        <h2><i class="fas fa-folder fa-fw"></i> Delete</h2>
    </div>
    <div class="body">
        <div class="alert alert-danger">
            <i class="far fa-exclamation-triangle fa-fw"></i>
            Are you sure you want to delete this media group?
        </div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NormalizedName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NormalizedName)
            </dd>
        </dl>
        <form v-on:submit.prevent="submit">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn bc-button btn-danger" />
            <i class="fas fa-spinner fa-pulse fa-fw" v-bind:class="{'d-none':!loading}"></i>
            <div v-if="errors.result" class="mb-3 alert alert-danger -mar">
                <i class="fas fa-exclamation-triangle fa-fw"></i> {{errors.result}}
            </div>
        </form>
    </div>
</section>
<a asp-action="Index">Back to List</a>


@{
    Layout = "_ManagementLayout";
    ViewData["Controller"] = "Media";
    ViewData["Child"] = "Group";
    ViewData["Action"] = "Create";
    ViewData["Title"] = $"{ViewData["Child"]} - {ViewData["Action"]}";
}
<section id="mediagroup-create-form" class="form-component">
    <div class="header">
        <h2><i class="fas fa-folder fa-fw"></i> MediaGroup</h2>
    </div>
    <div class="body">
        <form method="post" v-on:submit.prevent="submit">
            <div class="mb-3">
                <label for="name">Name</label>
                <input id="name" type="text" class="form-control" v-model="name" autocomplete="off" required />
                <span v-if="errors.name" class="text-danger">{{errors.name}}</span>
            </div>
            <div class="mb-3">
                <label for="name">Normalized Name</label>
                <input id="name" type="text" class="form-control" v-model="normalizedName" disabled required />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary bc-button" title="Submit">
                    Submit
                </button>
            </div>
            <div class="mb-3">
                <div v-if="errors.result" class="mb-3 alert alert-danger">
                    <i class="fas fa-exclamation-triangle fa-fw"></i> {{errors.result}}
                </div>
            </div>
        </form>
    </div>
</section>


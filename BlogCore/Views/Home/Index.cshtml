@model HomeViewModel
@{
    ViewData["Controller"] = "Home Page";
    ViewData["Title"] = "Home";
    string profile = String.IsNullOrWhiteSpace(Model.User.Link) ?
        "/assets/dist/images/default_profile_pic.png"
        : Model.User.Link;
}

<section id="landing-section" class="page-landing">
    <nav class="navbar navbar-expand-lg bc-nav">
        <a class="navbar-brand brand" href="/">
            <img src="~/assets/dist/images/blogcore_logo_white_42x42.png" /> BlogCore
        </a>
        <ul class="navbar-nav">
            @if (!User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link" title="Sign in"><i class="fad fa-sign-in fa-fw"></i></a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a asp-area="" asp-controller="Manage" asp-action="Index" class="nav-link" title="Home"><i class="fad fa-home fa-fw"></i></a>
                </li>
                <li class="nav-item">
                    <form method="post" asp-action="Logout" asp-controller="Account">
                        <button class="nav-link" title="Sign out">
                            <i class="fad fa-sign-out fa-fw"></i>
                        </button>
                    </form>
                </li>
            }

        </ul>
    </nav>
    <div class="content">
        <div class="body">
            <div class="profile-picture-container">
                <div class="profile-picture" style="background-image:url(@profile);"></div>
            </div>
            <h1 class="title">
                @Model.User.FirstName @Model.User.LastName
            </h1>
            <div class="subtitle">
                @Model.User.Title
            </div>
            @if (Model.Home != null)
            {
                <div class="links">
                    @if (!String.IsNullOrWhiteSpace(Model.Home.GithubLink))
                    {
                        <a href="@Model.Home.GithubLink" class="link" title="Github"><i class="fab fa-github fa-fw fa-2x"></i></a>
                    }
                    @if (!String.IsNullOrWhiteSpace(Model.Home.LinkedInLink))
                    {
                        <a href="@Model.Home.LinkedInLink" class="link" title="Linked In"><i class="fab fa-linkedin fa-fw fa-2x"></i></a>
                    }
                </div>
            }
        </div>
    </div>
</section>
<section id="about-me-section" class="about-me">
    <div class="bc-header header">
        <h2 class="title">About Me</h2>
        <div class="underline"></div>
    </div>
    <div class="container-fluid body">
        <div class="row">
            <div class="col">
                <h5>Name:</h5>
                <p><i class="fa fa-user-circle fa-fw"></i> @Model.User.FirstName @Model.User.LastName</p>
                @if (!String.IsNullOrEmpty(Model.User.PhoneNumber))
                {
                    <h5>Phone:</h5>
                    <p><i class="fa fa-phone fa-fw"></i> @Model.User.PhoneNumber</p>
                }
                <h5>Email:</h5>
                <p><i class="fa fa-envelope fa-fw"></i> @Model.User.Email</p>
            </div>
            @if (!String.IsNullOrEmpty(Model.User.Bio))
            {
                <div class="col bio">
                    <h5>Bio</h5>
                    <p>@Model.User.Bio</p>
                </div>
            }
        </div>
    </div>
</section>
<section id="skills-section" class="skills">
    <div class="bc-header header">
        <h2 class="title">Skills</h2>
        <div class="underline"></div>
    </div>
    <div class="container-fluid body">
        @foreach (SkillModel item in Model.Skills)
        {
            <div class="skill-panel">
                <div class="content">
                    <div class="title">
                        @item.Name
                    </div>
                    <div class="body">
                        @item.Proficiency
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<section class="my-education">
    <div class="bc-header">
        <h2 class="title">Education</h2>
        <div class="underline"></div>
    </div>
    <div class="container-fluid">
        @foreach (EducationModel item in Model.Education)
        {
            <div class="education-panel">
                <a href="@item.Link" target="_blank">
                    <div class="school-img">
                        <img src="@item.ImageUrl" />
                    </div>
                    <div class="body">
                        <h3>@item.School</h3>
                        <h4>@item.Title</h4>
                        <h4>@item.Year</h4>
                    </div>
                </a>
            </div>
        }
    </div>
</section>
<section class="my-experience">
    <div class="bc-header">
        <h2 class="title">Experience</h2>
        <div class="underline"></div>
    </div>
    <div class="container-fluid">
        @foreach (JobModel item in Model.Jobs)
        {
            <div class="job-panel">
                <div class="company">
                    <h3>@item.Company</h3>
                    <span>@item.JobStart - @item.JobEnd</span>
                </div>
                <div class="position">
                    <h3>@item.Title</h3>
                    <p>@item.Description</p>
                </div>
            </div>
        }
    </div>
</section>
<section id="contact-section" class="contact-me">
    <div class="bc-header">
        <h2 class="title">Contact me</h2>
        <div class="underline"></div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="content-panel">
                    <i class="fad fa-download fa-4x"></i>
                    <h3>Download my full CV</h3>
                    <p>Click Here</p>
                </div>
            </div>
            <div class="col">
                <div class="contact-form">
                    <form v-on:submit.prevent="submit" class="body">
                        <div class="mb-3">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" v-model="name" class="form-control form-input" maxlength="25" />
                            <span v-if="errors.name" class="text-danger">{{errors.name}}</span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" v-model="email" class="form-control form-input" maxlength="35" />
                            <span v-if="errors.email" class="text-danger">{{errors.email}}</span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Message"></label>
                            <textarea asp-for="Message" v-model="message" class="form-control form-input"> </textarea>
                            <span v-if="errors.message" class="text-danger">{{errors.message}}</span>
                        </div>
                        <div class="mb-3">
                            <div class="g-recaptcha" data-sitekey="@Model.CaptchaClientKey"></div>
                            <span v-if="errors.token" class="text-danger">{{errors.token}}</span>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary bc-button" title="Submit">Submit</button>
                            <i class="fas fa-spinner fa-pulse fa-fw" v-bind:class="{'d-none':!loading}"></i>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<footer class="page-footer">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <p>
                    <i class="fal fa-copyright fa-fw"></i> Jimmy Hodgson @DateTime.Now.Year
                </p>

            </div>
            <div class="col d-none d-sm-block">
                <p class="text-right ">
                    Made with <i class="fas fa-heart fa-fw"></i> in Nicaragua
                </p>
            </div>
        </div>
    </div>
</footer>

@section HeadScripts {
    <script src="https://www.google.com/recaptcha/enterprise.js"></script>
}

@section Scripts{
    <script src="~/assets/dist/lib/vue-toast-notification/index.min.js"></script>
}

@section Styles{
    <link rel="stylesheet" href="~/assets/dist/lib/vue-toast-notification/theme-sugar.css" />
}
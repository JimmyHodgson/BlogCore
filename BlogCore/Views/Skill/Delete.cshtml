@model SkillModel

@{
    Layout = "_ManagementLayout";
    ViewData["Controller"] = "Skills";
    ViewData["Action"] = "Delete";
    ViewData["Title"] = $"{ViewData["Controller"]} - {ViewData["Action"]}";
    ViewData["Icon"] = "fas fa-sparkles fa-fw";
}
<section id="skill-delete-form" class="form-component">
    <div class="header">
        <h2><i class="fas fa-sparkles fa-fw" aria-hidden="true"></i> Delete</h2>
    </div>
    <div class="body">
        <div class="alert alert-danger">
            <i class="far fa-exclamation-triangle fa-fw" aria-hidden="true"></i>
            Are you sure you want to delete this?
        </div>
        <div class="mb-3">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Proficiency)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Proficiency)
                </dd>
            </dl>
        </div>
        <form v-on:submit.prevent="submit">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <input type="submit" value="Delete" class="btn btn-danger bc-button" />
            </div>
            <div class="mb-3">
                <div v-if="errors.result" class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle fa-fw" aria-hidden="true"></i> {{errors.result}}
                </div>
            </div>
        </form>
        <a asp-action="Index"><i class="fal fa-arrow-left fa-fw" aria-hidden="true"></i> Back to List</a>
    </div>
</section>

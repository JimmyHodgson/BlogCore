@model SkillModel

@{
    Layout = "_ManagementLayout";
    ViewData["Controller"] = "Skills";
    ViewData["Action"] = "Details";
    ViewData["Title"] = $"{ViewData["Controller"]} - {ViewData["Action"]}";
    ViewData["Icon"] = "fas fa-sparkles fa-fw";
}

<section id="skill-details" class="form-component">
    <div class="header">
        <h2><i class="fas fa-sparkles fa-fw"></i> Details</h2>
    </div>
    <div class="body">
        <div class="mb-3">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Proficiency)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Proficiency)
                </dd>
            </dl>
            <a asp-action="Index"><i class="fal fa-arrow-left fa-fw"></i> Back to List</a> |
            <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fal fa-edit fa-fw"></i> Edit</a>
        </div>
    </div>
</section>
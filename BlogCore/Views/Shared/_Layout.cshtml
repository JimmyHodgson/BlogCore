<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogCore</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/assets/dist/css/main.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/assets/dist/css/main.min.css" asp-append-version="true" />
    </environment>
    @RenderSection("Styles", false)

    @*jQuery has to stay at the top for now so it's accessible by js init code that's placed within partials*@
    <script src="~/assets/dist/lib/jquery.min.js"></script>
</head>
<body>
     @RenderBody()

    <environment include="Development">
        <script src="~/assets/dist/lib/vue.js"></script>
        <script src="~/assets/dist/js/common.js" asp-append-version="true"></script>
        <script src="~/assets/dist/js/project.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/assets/dist/lib/vue.min.js"></script>
        <script src="~/assets/dist/js/common.min.js" asp-append-version="true"></script>
        <script src="~/assets/dist/js/project.min.js" asp-append-version="true"></script>
    </environment>

    <script src="~/assets/dist/lib/popper.min.js"></script>
    <script src="~/assets/dist/lib/bootstrap.min.js"></script>

</body>
</html>

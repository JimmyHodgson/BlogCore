@model JobModel

@{
    Layout = "_ManagementLayout";
    ViewData["Controller"] = "Experience";
    ViewData["Action"] = "Edit";
    ViewData["Title"] = $"{ViewData["Controller"]} - {ViewData["Action"]}";
    ViewData["Icon"] = "fas fa-briefcase fa-fw";
}

<section id="job-edit-form" class="form-component">
    <div class="header">
        <h2><i class="fas fa-briefcase fa-fw" aria-hidden="true"></i> Edit</h2>
    </div>
    <div class="body">
        <form v-on:submit.prevent="submit">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Company" class="control-label"></label>
                <input asp-for="Company" v-model="company" class="form-control" />
                <span v-if="errors.company" class="text-danger">{{errors.company}}</span>
            </div>
            <div class="mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span v-if="errors.title" class="text-danger">{{errors.title}}</span>
            </div>
            <div class="mb-3">
                <label asp-for="JobStart" class="control-label"></label>
                <input asp-for="JobStart" asp-format="{0:dd\/MM\/yyyy}" type="hidden" class="form-control" />
                <vue-date-picker v-model="jobStart"
                                 :enable-time-picker="false"
                                 :format="dateFormat"
                                 auto-apply>
                </vue-date-picker>
                <span v-if="errors.jobStart" class="text-danger">{{errors.jobStart}}</span>
            </div>
            <div class="mb-3">
                <label asp-for="JobEnd" class="control-label"></label>
                <input asp-for="JobEnd" asp-format="{0:dd\/MM\/yyyy}" type="hidden" class="form-control" />
                <vue-date-picker v-model="jobEnd"
                                 :format="dateFormat"
                                 :enable-time-picker="false"
                                 auto-apply>
                </vue-date-picker>
                <span v-if="errors.jobEnd" class="text-danger">{{errors.jobEnd}}</span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" v-model="description" class="form-control" rows="3"></textarea>
                <span v-if="errors.description" class="text-danger">{{errors.description}}</span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary bc-button" />
                <div v-if="errors.result" class="mb-3 alert alert-danger">
                    <i class="fas fa-exclamation-triangle fa-fw" aria-hidden="true"></i> {{errors.result}}
                </div>
            </div>
        </form>
        <a asp-action="Index"><i class="fal fa-arrow-left fa-fw" aria-hidden="true"></i> Back to List</a>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/assets/dist/lib/vue-datepicker/main.css" asp-append-version="true" />
}
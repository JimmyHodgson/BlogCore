@model JobModel

@{
    Layout = "_ManagementLayout";
    ViewData["Controller"] = "Experience";
    ViewData["Action"] = "Delete";
    ViewData["Title"] = $"{ViewData["Controller"]} - {ViewData["Action"]}";
    ViewData["Icon"] = "fas fa-briefcase fa-fw";
}

<section id="job-delete-form" class="form-component">
    <div class="header">
        <h2><i class="fas fa-briefcase fa-fw"></i> Delete</h2>
    </div>
    <div class="body">
        <div class="alert alert-danger">
            <i class="far fa-exclamation-triangle fa-fw"></i>
            Are you sure you want to delete this?
        </div>
        <div class="mb-3">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Company)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Company)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.JobStart)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.JobStart)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.JobEnd)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.JobEnd)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
        <div class="mb-3">
            <form v-on:submit.prevent="submit">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <input type="submit" value="Delete" class="btn btn-danger bc-button" />
                </div>
                <div class="mb-3">
                    <div v-if="errors.result" class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle fa-fw"></i> {{errors.result}}
                    </div>
                </div>
            </form>
            <a asp-action="Index"><i class="fal fa-arrow-left fa-fw"></i> Back to List</a>
        </div>
    </div>
</section>

